# dark mode
set recolor true
map <C-i> recolor

# enable copy to clipboard
set selection-clipboard clipboard

# page down/up
map [normal] d scroll full-down
map [normal] u scroll full-up

# scroll
map [normal] n scroll left
map [normal] e scroll down
map [normal] i scroll up
map [normal] o scroll right
# page navigation
map [normal] E navigate next
map [normal] I navigate previous

# zoom in/out
map [normal] <C-+> zoom in
map [normal] <C--> zoom out
