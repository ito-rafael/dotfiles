    case "${XDG_SESSION_TYPE}" in
        "x11") ssh $REMOTE cat $XDG_CONFIG_HOME/i3/_config | vim - ;;
        "wayland") ssh $REMOTE cat $XDG_CONFIG_HOME/sway/_config | vim - ;;
