alias ze='vim $XDG_CONFIG_HOME/zsh/.zshenv'
alias kk='vim $XDG_CONFIG_HOME/kitty/kitty.conf'
alias bb='vim $XDG_CONFIG_HOME/i3/i3blocks.conf'
