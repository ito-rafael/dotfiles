# function to create & set venv
function ve() {
    cd $HOME/venvs
    python -m venv $1
    cd $1
    source bin/activate
    pip install -U powerline-status
}
# function to activate venv
function va() {
    cd $HOME/venvs/$1
    source bin/activate
}
